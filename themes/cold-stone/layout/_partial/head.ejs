<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta name="referrer" content="no-referrer">
    <meta name="theme-color" content="#333333">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="google" content="notranslate">
    <meta name="format-detection" content="telephone=no">

    <meta name="keyword" content="<%= config.keywords %>">
    <meta name="description" content="<% if (page.description) { %><%= page.description %><% } else if (page.excerpt) { %><%= strip_html(page.excerpt).trim().substring(0, 150) %><% } else { %><%= config.description %><% } %>">
    <title><% if (page.title) { %><%= page.title + ' | ' + config.title %><% } else { %><%= config.title %><% } %></title>
    <% if (page.path) { %><link rel="canonical" href="<%= config.url %><%- url_for(page.path) %>"><% } %>
    <link rel="alternate" href="<%= url_for('atom.xml') %>" title="<%= config.title %>" type="application/atom+xml">

    <base href="/">
    <link rel="preconnect" href="//cdn.bootcss.com">
    <link rel="manifest" href="<%= config.root %>manifest.json">
    <link rel="shortcut icon" href="<%= config.root %>icons/icon-72x72.png">
    <link rel="apple-touch-icon" href="<%= config.root %>icons/icon-192x192.png">
    <link href="https://cdn.bootcss.com/highlight.js/9.15.10/styles/atom-one-light.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/highlight.js/9.15.10/styles/atom-one-dark.min.css" rel="stylesheet" media="screen and (prefers-color-scheme: dark)">
    <link href="https://cdn.bootcss.com/uikit/3.2.0/css/uikit.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/uikit/3.2.0/js/uikit.min.js" async></script>
    <script src="https://cdn.bootcss.com/uikit/3.2.0/js/uikit-icons.min.js" async></script>
    <%- css(['styles/cold-stone.css']) %>
    <noscript>
      <p class="text-center">你的浏览器还没开启 Javascript 功能！</p>
    </noscript>
</head>