@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"

/* 搜索弹窗样式 */
.search-modal
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.7)
  z-index: 9999
  text-align: center
  opacity: 0
  transition: opacity 0.3s ease-out

.search-modal.show
  display: block
  opacity: 1

.search-box
  background: #fff
  border-radius: 8px
  padding: 25px
  max-width: 650px
  margin: 100px auto 0
  position: relative
  box-shadow: 0 5px 25px rgba(0,0,0,0.3)
  transform: translateY(-20px)
  transition: transform 0.3s ease-out

.search-modal.show .search-box
  transform: translateY(0)

#search-input
  width: 95%
  padding: 12px 15px
  border: 1px solid #ddd
  border-radius: 5px
  font-size: 1.1em
  color: #333
  background-color: #f8f8f8
  outline: none
  box-sizing: border-box
  transition: border-color 0.2s ease-in-out

#search-input:focus
  border-color: #337ab7
  background-color: #fff

.search-close
  position: absolute
  top: 10px
  right: 15px
  font-size: 36px
  line-height: 1
  cursor: pointer
  color: #666
  transition: color 0.2s ease-in-out

.search-close:hover
  color: #333

#search-result
  list-style: none
  padding: 0
  margin-top: 25px
  max-height: 450px
  overflow-y: auto
  text-align: left
  line-height: 1.6

#search-result li
  border-bottom: 1px dashed #eee
  padding: 12px 0

#search-result li:last-child
  border-bottom: none

#search-result a
  font-weight: bold
  color: #337ab7
  text-decoration: none
  font-size: 1.05em
  display: block

#search-result a:hover
  text-decoration: underline

#search-result .search-excerpt
  color: #555
  font-size: 0.95em
  margin-top: 5px

#search-result::-webkit-scrollbar
  width: 8px

#search-result::-webkit-scrollbar-thumb
  background-color: #ccc
  border-radius: 4px

#search-result::-webkit-scrollbar-track
  background-color: #f5f5f5

/* 分享弹层样式 */
.article-share-box
  display: none
  position: absolute
  background: #fff
  border: 1px solid #ddd
  padding: 8px
  border-radius: 6px
  min-width: 220px
  z-index: 9999
  box-shadow: 0 6px 18px rgba(0,0,0,0.12)

.article-share-box.on
  display: block

.article-share-input
  width: 100%
  padding: 6px 8px
  margin-bottom: 8px
  border: 1px solid #ddd
  border-radius: 4px
  box-sizing: border-box
  cursor: pointer

.article-share-links a
  margin-right: 8px
  text-decoration: none
  color: #444

.article-share-links a:hover
  color: #0073e6

.article-share-links a .fa
  font-size: 16px
